// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../db/receitas.db"
}

model User{
  id          Int       @id       @default(autoincrement())
  name        String 
  email       String    @unique
  password    String
  receita     Receita[]
}

model Receita{
  id                  Int       @id       @default(autoincrement())
  name                String 
  description         String
  preparationTime     Int
  user                User      @relation(fields: [userId], references: [id])
  userId              Int
}